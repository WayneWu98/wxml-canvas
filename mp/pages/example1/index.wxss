page {
  width: 100%;
  height: 100vh;
}

.billboard {
  position: absolute;
  width: 750px;
  height: 1334px;
  left: -9999px;
  top: -9999px;
  background-image: url("https://resource.bearye.cn/bg_2022-05-20-20:59:28.png");
  background-size: cover;
}

.name {
  position: absolute;
  width: 100%;
  height: 114px;
  left: 0;
  top: 158px;
  text-align: center;
  font-family: 'Source Han Sans CN';
  font-weight: 900;
  font-size: 76px;
  line-height: 114px;
  color: #FFFFFF;
}

.data {
  position: absolute;
  top: 509px;
  left: 88px;
  right: 88px;
}

.row {
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2px;

  font-weight: 400;
  font-size: 26px;
}

.row:nth-of-type(odd) .left, .row:nth-of-type(odd) .right {
  background-color: #f5f5f5;
}

.row:nth-of-type(even) .left, .row:nth-of-type(even) .right {
  background-color: #f6f6f6;
}

.left, .right {
  width: 100%;
  text-align: center;
  line-height: 48px;
}

.left {
  color: #888888;
  margin-right: 1px;
}

.right {
  margin-left: 1px;
  color: #333333;
}

#canvas {
  position: absolute;
  left: -9999rpx;
  top: -9999rpx;
  width: 750rpx;
  height: 750rpx;
}

.qr-code {
  position: absolute;
  top: 777px;
  left: 108px;
  width: 168px;
  height: 168px;
}